@model ChangePasswordViewModel
@{
    ViewData["Title"] = "Смена пароля";
}


<h1 style="margin-left:4%; margin-top:20px;">Смена пароля</h1>
<hr />
<div class="row" style="margin-left:5%;">
    <div class="col-md-4">
        <form method="post" asp-controller="Account" asp-action="ChangePassword">
            <div asp-validation-summary="All"></div>
            <div class="form-group">
                <label asp-for="OldPassword"></label><br />
                <input asp-for="OldPassword" class="form-control"  type="password"/>
                <span asp-validation-for="OldPassword"></span>
            </div>

            <div class="form-group">
                <label asp-for="NewPassword"></label> <br />
                <input asp-for="NewPassword" class="form-control" type="password" />
                <span asp-validation-for="NewPassword"></span>
            </div>

            



            <input type="hidden" asp-for="Id" value="@Model.Id" />
            <input type="hidden" asp-for="Email" value="@Model.Email" />
            <div class="form-group">
                <input type="submit" value="Добавить" class="btn btn-outline-success" />
            </div>

        </form>
    </div>
</div>
