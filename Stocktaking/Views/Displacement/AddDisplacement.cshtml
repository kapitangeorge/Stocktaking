@model AddDisplacementViewModel
@{
    ViewData["Title"] = "AddDisplacement";
}

<h1  style="margin-left:4%; margin-top:20px;">Добавление перемещение на поступление имущества</h1>





<hr />
<div class="row" style="margin-left:5%;">
    <div class="col-md-4">
        <form method="post" asp-controller="Displacement" asp-action="AddDisplacement">
            <div asp-validation-summary="All"></div>
            <div class="form-group">
                <label asp-for="FromWhere"></label> <br />
                <input asp-for="FromWhere" class="form-control" />
                <span asp-validation-for="FromWhere"></span>
            </div>

            <div class="form-group">
                <label asp-for="WhereTo"></label> <br />
                <select asp-for="WhereTo" asp-items=@ViewBag.Rooms class="form-control"></select>
            </div>

            <div class="form-group">
                <input type="submit" value="Продолжить" class="btn btn-outline-success" />
            </div>

        </form>
    </div>
</div>

