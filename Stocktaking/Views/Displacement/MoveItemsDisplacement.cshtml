@model MoveItemDisplacementViewModel
@{
    ViewData["Title"] = "Перемещение имущества";
}

<h1 style="margin-left:4%; margin-top:20px;">Перемещение имущества</h1>





<hr />
<div class="row" style="margin-left:5%;">
    <div class="col-md-4">
        <form method="post" asp-controller="Displacement" asp-action="MoveItemsDisplacement">
            <div asp-validation-summary="All"></div>
            <div class="form-group">
                <label>Переместить в другое помещение</label><br />
                <select asp-for="RoomId" class="form-control">
                    <option value="0" selected="selected"></option>
                    @foreach (var room in ViewBag.Rooms)
                    {
                        <option value="@room.Id">@room.Name</option>
                    }
                </select>

            </div>

            <div class="form-group">
                <label>Отдать в личное пользование</label><br />
                <select asp-for="UserId" class="form-control">
                    <option value="0" selected="selected"></option>
                    @foreach (var user in ViewBag.Allusers)
                    {
                        
                        
                        
                        <option value="@user.Id">@user.FirstName  @user.LastName</option>
                    }
                </select>

            </div>

            <input type="hidden" asp-for="ItemId" value="@Model.ItemId" />

            <div class="form-group">
                <input type="submit" value="Продолжить" class="btn btn-outline-success" />
            </div>

        </form>
    </div>
</div>