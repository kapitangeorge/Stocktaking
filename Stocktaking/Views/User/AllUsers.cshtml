@model List<UserWithItemsViewModels> 
@{
    ViewData["Title"] = "Все сотрудники";
}

<h1>Все сотрудники</h1>

<table class="table">
    <tr><th>Имя</th><th>Фамилия</th><th>Должность</th><th>Предметы в личном пользовании</th></tr>
    @foreach (var user in Model)
    {
        <tr>
            <td>@user.FirstName</td>
            <td>@user.LastName</td>
            <td>@user.Position</td>
            <td>
                <ul>
                    @foreach (var item in user.Items)
                    {
                        <li> @item.Name  @item.InventoryNumber </li>
                    }
                </ul>
                
            </td>
        </tr>
    }
</table>

